extends layout

block content
  #page
    header
      center
        .image
          img(src=word.image)
        .word
          h1= word.word
          span= word.translations.spanish
          span &middot;
          span= word.translations.french
          span &middot;
          span= word.translations.arabic
          span &middot;
          span= word.translations.chinese
          span &middot;
          span= word.translations.urdu
    hr.heading
    table.spell
      tr
        td(v-align="top")
          h6 Letters
        td.right
          - let chars = word.word.split()
            .letters
              - for (var i = 0; i < word.word.length; i++) {
                  span= word.word.charAt(i)
              - }
    table.words
      tr
        td(v-align="top")
          h6 Words
        td.right
          - if (word.synonyms.length > 3)
            - word.synonyms = word.synonyms.slice(0,3)
          - for (w of word.synonyms)
            span= w.replace("_", " ").replace("(a)", "")

    table.sentence
      tr
        td(valign="top")
          h6 Sentence
        td.right
          p= word.sentence

          hr
          hr
    #pagefooter
      span.page= parseInt(page) + 1
      span
        em Photo by #{word.imageCredit} on Unsplash
